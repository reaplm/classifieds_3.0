@model Classifieds.Web.Models.RegistrationViewModel


    <div id="pg-register" class="container pt-1 pb-2">
        <h3 class="text-center">Create Account</h3>
        @using (Html.BeginForm("Index", "Registration", new { ReturnUrl = ViewBag.ReturnUrl },
        FormMethod.Post, true, htmlAttributes: new { @class = "form-horizontal text-center mt-2", @id = "register" }))
        {
            Html.AntiForgeryToken();
            <div class="form-group clearfix has-danger">
                <div class="col-sm-12">
                    @Html.TextBoxFor(model => model.User.UserDetail.FirstName, "",
                        new {@placeholder="First Name",
                            @class = "rounded-box size-lg form-control form-input" })
                    @Html.ValidationMessageFor(model => model.User.UserDetail.FirstName, "",
                                       htmlAttributes: new { @class = "float-left form-control-danger" })
                </div>
            </div>
            <div class="form-group clearfix has-danger">
                <div class="col-sm-12">
                    @Html.TextBoxFor(model => model.User.UserDetail.LastName, "",
                        new {@placeholder="Last Name",
                            @class = "rounded-box size-lg form-control form-input" })
                    @Html.ValidationMessageFor(model => model.User.UserDetail.LastName, "",
                                       htmlAttributes: new { @class = "float-left form-control-danger" })
                </div>
            </div>

            <div class="form-group clearfix has-danger">
                <div class="col-sm-12">
                    @Html.TextBoxFor(model => model.User.Email, "",
                        new {@placeholder="Email",
                            @class = "rounded-box size-lg form-control form-input" })
                    @Html.ValidationMessageFor(model => model.User.Email, "",
                                       htmlAttributes: new { @class = "float-left form-control-danger" })
                </div>
            </div>
            <div class="form-group clearfix has-danger">
                <div class="col-sm-12">
                    @Html.PasswordFor(model => model.Password,
                        new {@placeholder="Password",
                            @class = "rounded-box size-lg form-control form-input" })
                    @Html.ValidationMessageFor(model => model.Password, "",
                                       htmlAttributes: new { @class = "float-left form-control-danger" })
                </div>
            </div>
            <div class="form-group clearfix has-danger">
                <div class="col-sm-12">
                    @Html.PasswordFor(model => model.ConfirmPassword,
                        new {@placeholder="Confirm Password",
                            @class = "rounded-box size-lg form-control form-input" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "",
                                       htmlAttributes: new { @class = "float-left form-control-danger" })
                </div>
            </div>
            <div class="form-group clearfix has-danger">

                @Html.CheckBoxFor(model => model.AcceptTerms)
                @Html.ActionLink("Terms and Conditions", "", "")
            </div>
            <div class="form-group clearfix has-danger">
                @Html.ValidationMessageFor(model => model.AcceptTerms, "",
                                       htmlAttributes: new { @class = "form-control-danger" })
            </div>
            <div class="form-group">
                <button class="rounded-box size-lg form-button w-100">SUBMIT</button>
            </div>
        }
</div>