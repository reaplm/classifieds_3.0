<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script>
        UPLOADCARE_PUBLIC_KEY = '1f4ebb5d14270931faf4';
        UPLOADCARE_TABS = 'file camera gdrive dropbox instagram onedrive';
        UPLOADCARE_IMAGE_SHRINK = '1024x1024';
        UPLOADCARE_IMAGES_ONLY = true;
        UPLOADCARE_CLEARABLE = true;
    </script>

    


    <title>@ViewData["Title"] - Classifieds</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/bootstrap-4.4.1-dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" 
              integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" 
              crossorigin="anonymous"
              asp-fallback-href="~/lib/bootstrap/bootstrap-4.4.1-dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" 
                asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body class="bg-fff">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 pr-0">
                <!-- Html.RenderPartial(action, controller ) -->
                @{Html.RenderPartial("SideBarMenu"); }
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-9 bg-fff pl-2">
                <div class="shadow mt-0">
                    <nav class="navbar navbar-expand-lg admin-menu rounded-box mb-4"
                         role="navigation">


                        <div class="navbar-header">
                            <button type="button" class="btn float-left d-lg-none mr-1 bg-transparent" onclick="OpenSidebar()">
                                <span class="navbar-toggler-icon" aria-hidden="true"><img src="~/images/icons/menu-s.png" /></span>
                            </button>

                        </div>
                        <button type="button" class="navbar-toggler border
                        hidden-lg " data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false">
                            <span class="navbar-toggler-icon">&#9776;</span>
                        </button>

                        <div class="navbar-collapse collapse justify-content-end">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="Home" asp-action="Index"
                                       class="@((ViewContext.RouteData.Values["Controller"].ToString().Equals("Home")
&& ViewContext.RouteData.Values["Action"].ToString().Equals("Index")) ? "active" : "")
                           nav-link">
                                        Home
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="Classifieds" asp-action="Index"
                                       class="@((ViewContext.RouteData.Values["Controller"].ToString().Equals("Classifieds")
&& ViewContext.RouteData.Values["Action"].ToString().Equals("Index")) ? "active" : "")
                           nav-link">

                                        Classifieds
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="Classifieds" asp-action="Create"
                                       class="@((ViewContext.RouteData.Values["Controller"].ToString().Equals("Classifieds")
&& ViewContext.RouteData.Values["Action"].ToString().Equals("Create")) ? "active" : "")
                           nav-link">
                                        Post Ad
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="Home" asp-action="Index"
                                       class="@((ViewContext.RouteData.Values["Controller"].ToString().Equals("Settings")
&& ViewContext.RouteData.Values["Action"].ToString().Equals("Index")) ? "active" : "")
                           nav-link">
                                        Settings
                                    </a>
                                </li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li class="nav-item">
                                        <a asp-area="" asp-controller="Login" asp-action="SignOut"
                                           class="@((ViewContext.RouteData.Values["Controller"].ToString().Equals("User")
&& ViewContext.RouteData.Values["Action"].ToString().Equals("Index")) ? "active" : "")
                           nav-link">
                                            Logout
                                        </a>
                                    </li>


                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a asp-area="" asp-controller="Login" asp-action="Index"
                                           class="@((ViewContext.RouteData.Values["Controller"].ToString().Equals("User")
&& ViewContext.RouteData.Values["Action"].ToString().Equals("Index")) ? "active" : "")
                           nav-link">
                                            Login
                                        </a>
                                    </li>

                                }
                            </ul>
                        </div>

                    </nav>

                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery-3.4.1.js"></script>
        <script src="~/lib/Popper/umd/popper.js"></script>
        <script src="~/lib/bootstrap/bootstrap-4.4.1-dist/js/bootstrap.js"></script>
        <script src="~/lib/d3/d3.js" type="text/javascript"></script>
        <script src="~/js/d3.js" type="text/javascript"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="https://ucarecdn.com/libs/widget/3.x/uploadcare.full.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" 
                integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" 
                crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" 
                integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" 
                crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
                integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
                crossorigin="anonymous"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
