<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script>
        UPLOADCARE_PUBLIC_KEY = '1f4ebb5d14270931faf4';
        UPLOADCARE_TABS = 'file camera gdrive dropbox instagram onedrive';
        UPLOADCARE_IMAGE_SHRINK = '1024x1024';
        UPLOADCARE_IMAGES_ONLY = true;
        UPLOADCARE_CLEARABLE = true;
    </script>

    


    <title>@ViewData["Title"] - Classifieds</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar" >
        <div class="container">
            <button type="button" class="navbar-toggle float-right" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="flex-container">
                <div class="navbar-header">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Classifieds</a>
                </div>
                <div class="navbar-collapse collapse" >

                <ul class="nav navbar-nav" style="border: solid">
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Index"
                           class="@((ViewContext.RouteData.Values["Controller"].ToString().Equals("Home")
                               && ViewContext.RouteData.Values["Action"].ToString().Equals("Index"))? "active":"")">
                            Home
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Classifieds" asp-action="Index"
                           class="@((ViewContext.RouteData.Values["Controller"].ToString().Equals("Classifieds")
                               && ViewContext.RouteData.Values["Action"].ToString().Equals("Index"))? "active":"")">

                            Classifieds
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Classifieds" asp-action="Create"
                           class="@((ViewContext.RouteData.Values["Controller"].ToString().Equals("Classifieds")
                                   && ViewContext.RouteData.Values["Action"].ToString().Equals("Create"))? "active":"")"> 
                            Post Ad
                        </a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
            {
                <li>
                    <a asp-area="" asp-controller="Login" asp-action="SignOut"
                       class="@((ViewContext.RouteData.Values["Controller"].ToString().Equals("User")
                                       && ViewContext.RouteData.Values["Action"].ToString().Equals("Index"))? "active":"")">
                        Logout
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller=" " asp-action="Index">
                        Welcome @User.Identity.Name!
                    </a>
                </li>

    }
    else
    {
        <li>
            <a asp-area="" asp-controller="Login" asp-action="Index"
               class="@((ViewContext.RouteData.Values["Controller"].ToString().Equals("User")
                               && ViewContext.RouteData.Values["Action"].ToString().Equals("Index"))? "active":"")">
                Login
            </a>
        </li>

}

                </ul>
            </div>
                </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - Classifieds</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="https://ucarecdn.com/libs/widget/3.x/uploadcare.full.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
