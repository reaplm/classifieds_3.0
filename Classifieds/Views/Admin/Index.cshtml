<div class="container-fluid pl-0 p-2">
    <div class="row mt-3">
        <div class="col-lg-3">
            <div id="" class="card small-card shadow nopadding">
                <div class="card-body">
                    <div class="card-body">
                        <h1 class="text-center counter-count">@ViewBag.CountUsers</h1>
                        <p class="card-text text-center">Users</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div id="" class="card small-card shadow">
                <div class="card-body">
                        <h1 class="text-center mt-3 counter-count">@ViewBag.CountAdverts</h1>
                        <p class="card-text text-center">Adverts</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card small-card shadow">
                <div id="" class="card-body">
                    <h1 class="text-center mt-3 counter-count">10</h1>
                    <p class="card-text text-center">New Adverts</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div id="" class="card small-card shadow">
                <div class="card-body">
                        <h1 class="text-center mt-3 counter-count">500</h1>
                        <p class="card-text text-center">Visitors</p>
                </div>
            </div>
        </div>

    </div>
    <div class="row mt-3">
        <div class="col-lg-4">
            <div id="ad-status-graph" class="medium-card card shadow">
                <div class="card-body">
                    <h5 class="card-title text-center">Advert Status</h5>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div id="ad-location-pie" class="medium-card card shadow">
                <div class="card-body">
                    <h5 class="card-title text-center">Advert Location</h5>
                </div>
            </div>
        </div>
        </div>
    <div class="row mt-3">
        <div class="col-lg-6">
            <div id="new-posts" class="mt-3 large-card card shadow">
                <div class="card-header">Recent Adverts</div>
                    <div class="card-body">
                        <div class="table-responsive-sm">
                            <table class="table w-100">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Status</th>
                                        <th>Submitted</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for(int i = 0; i < 5; i++)
                                    {
                                        if( i > ViewBag.Adverts.Count - 1) { break; }
                                        var advert = ViewBag.Adverts[i];
                                        @Html.Raw("<tr>")
                                        @Html.Raw("<td class='text-capitalize  w-20'><a href = #>")
                                        @Html.Raw(advert.Detail.TitleSubString)
                                        @Html.Raw("</a></td><td class='w-25  text-lowercase'>")
                                        @Html.Raw(advert.Status)
                                        @Html.Raw("</td><td class='w-20'>")
                                        @Html.Raw(advert.SubmittedDate.ToString("dd MMM yyyy"))
                                        @Html.Raw("</td>")
                                        @Html.Raw("</tr>")
                                    }
                                </tbody>
                            </table>
                        </div>
                        <a href="#" class="btn btn-primary">More</a>
                    </div>
             </div>
            </div>
            <div class="col-lg-6 pl-0">
                <div id="new-users" class="mt-3 large-card card shadow">
                    <div class="card-header">New Users</div>
                        <div class="card-body">
                            <div class="table-responsive-sm">
                                <table class="table w-100">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Registered</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < 5; i++)
                                        {
                                            if (i > ViewBag.Users.Count - 1) { break; }

                                            var user = ViewBag.Users[i];
                                            @Html.Raw("<tr>")
                                            @Html.Raw("<td class='text-capitalize  w-25'><a href = #>")
                                            @Html.Raw(user.UserDetail.FirstName + " " + user.UserDetail.LastName)
                                            @Html.Raw("</a></td><td class='w-25'>")
                                            @Html.Raw(user.Email)
                                            @Html.Raw("</td><td class='w-25'>")
                                            @Html.Raw(user.RegDate.ToString("dd MMM yyyy"))
                                            @Html.Raw("</td>")
                                            @Html.Raw("</tr>")
                                        }
                                    </tbody>
                                </table>
                                <a href="#" class="btn btn-primary">More</a>
                            </div>
                </div>
            </div>
        </div>
    </div>
</div>