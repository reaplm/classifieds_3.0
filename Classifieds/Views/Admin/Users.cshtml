@model IEnumerable<Classifieds.Web.Models.UserViewModel>

<div id="adverts" class="mt-3 ml-2 mr-2">

    <table class="w-100">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.UserDetail.FirstName)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>Roles</th>
                <th>@Html.DisplayNameFor(model => model.UserDetail.MobileNo)</th>
                <th>@Html.DisplayNameFor(model => model.LastLogin)</th>
                <th>@Html.DisplayNameFor(model => model.RegDate)</th>
            </tr>
        </thead>
        <tbody>
            @{ bool odd = true; }
            @foreach (var user in Model)
    {
        if (odd)
        {
            @Html.Raw("<tr class='odd-row'>")
}
else
{
        @Html.Raw("<tr class='even-row'>")
}


        @Html.Raw("<td class='text-capitalize  w-25'>")
        @Html.ActionLink(user.UserDetail.FirstName + user.UserDetail.LastName,
   "action", "controller")
        @Html.Raw("</td><td class='w-25'>")
        @Html.DisplayFor(model => user.Email)
        @Html.Raw("</td><td class='w-25'>")
        @Html.Raw("<p></p>")

        @Html.Raw("</td><td class='w-25'>")

        @Html.DisplayFor(model => user.UserDetail.MobileNo)

        @Html.Raw("</td><td class=''>")
        @Html.DisplayFor(model => user.LastLogin)
        @Html.Raw("</td><td class=''>")
        @Html.DisplayFor(model => user.RegDate)
        @Html.Raw("</td><td>");
        @Html.Raw("<button type='button' class='close' " +
"onclick='DeleteAdvert()'><span></span></button></td>")
        @Html.Raw("</tr>")

odd = !odd;
}
        </tbody>
    </table>

</div>
